# Docker Environment Configuration
# Copy this to backend/.env for Docker deployment

# Database Configuration (Docker services)
DB_HOST=mysql
DB_PORT=3306
DB_USER=fraud_user
DB_PASSWORD=fraud_pass
DB_NAME=fraud_detection

# Application Configuration
APP_ENV=production
LOG_LEVEL=INFO

# Parallel Processing Configuration
# i5-12400 has 12 threads (6P cores + 0E cores)
# Reserve 4 threads for system/MySQL/FastAPI
PARALLEL_IMPORT_WORKERS=8

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Uvicorn Workers (FastAPI server)
UVICORN_WORKERS=4
